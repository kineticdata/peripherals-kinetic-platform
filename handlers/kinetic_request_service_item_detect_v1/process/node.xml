<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="kinetic_request_service_item_detect" name="Kinetic Request Service Item Detect" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>
        This handler checks to see if a given service item already exists.
    </description>
    <helpurl>http://ktc.kineticdata.com/handler/kinetic_request_service_item_detect/1</helpurl>
    <visible>true</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="catalog_name" label="Catalog Name" required="true"
            tooltip="The catalog name of the service item this handler will attempt to detect" />
        <parameter id="service_item_name" label="Service Item Name" required="true"
            tooltip="The name of the service item this handler attempt to detect" />
    </parameters>
    <handler name="kinetic_request_service_item_detect" version="1">
        <infos>
            <info name="server">&lt;%= @info['server'] %&gt;</info>
            <info name="username">&lt;%= @info['username'] %&gt;</info>
            <info name="password">&lt;%= @info['password'] %&gt;</info>
            <info name="port">&lt;%= @info['port'] %&gt;</info>
            <info name="prognum">&lt;%= @info['prognum'] %&gt;</info>
            <info name="authentication">&lt;%= @info['authentication'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="catalog_name">&lt;%= @parameters['catalog_name'] %&gt;</parameter>
            <parameter name="service_item_name">&lt;%= @parameters['service_item_name'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Exists"/>
    </results>
</taskDefinition>