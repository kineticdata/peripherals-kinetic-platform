<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="kinetic_request_ce_kapp_retrieve" name="Kinetic Request CE Kapp Retrieve" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>
        Retrieves a Kapp record in Kinetic Request CE.
    </description>
    <helpurl></helpurl>
    <visible>false</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="error_handling" label="Error Handling" required="true"
          tooltip="Determine what to return if an error is encountered."
          menu="Error Message,Raise Error">Error Message</parameter>
        <parameter id="space_slug" label="Space Slug" required="false"
          tooltip="The Space the submission is being retrieved from (defaults to info value if not provided)."/>
        <parameter id="kapp_slug" label="Kapp Slug" required="true"
          tooltip="The Kapp being retrieved from."/>
    </parameters>
    <handler name="kinetic_request_ce_kapp_retrieve" version="1">
        <infos>
            <info name="api_password">&lt;%= @info['api_password'] %&gt;</info>
            <info name="api_server">&lt;%= @info['api_server'] %&gt;</info>
            <info name="api_username">&lt;%= @info['api_username'] %&gt;</info>
            <info name="space_slug">&lt;%= @info['space_slug'] %&gt;</info>
            <info name="enable_debug_logging">&lt;%= @info['enable_debug_logging'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="error_handling">&lt;%= @parameters.has_key?("error_handling") ?
                @parameters["error_handling"] : "Raise Error" %&gt;</parameter>
            <parameter name="space_slug">&lt;%= @parameters['space_slug'] %&gt;</parameter>
            <parameter name="kapp_slug">&lt;%= @parameters['kapp_slug'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Handler Error Message"/>
        <result name="Name"/>
        <result name="Slug"/>
        <result name="CreatedAt"/>
        <result name="CreatedBy"/>
        <result name="UpdatedAt"/>
        <result name="UpdatedBy"/>
        <result name="Attributes"/>
    </results>
</taskDefinition>
